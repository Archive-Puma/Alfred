mixin modal(data)
    .modal(id=data.id)
        h2= data.title
        form(onsubmit="return runModal_" + data.id + "(event,this);")
            each argument in data.opts
                    label= argument.label + ":"
                    if argument.itype == 'select'
                        select(name=argument.name)
                            each option in argument.options
                                option(value=option)= option
                    else
                        input(type=argument.itype,name=argument.name)
            button(type="submit") Enviar

