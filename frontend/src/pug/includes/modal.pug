mixin modal(data)
    .modal.noselect(id=data.id)
        // Title
        h2.noselect= data.title
        // Form
        form(onsubmit="return runModal('" + data.id + "',event,this);")
            // Options
            each argument in data.opts
                // Label
                label.noselect= argument.label + ":"
                // Input
                if argument.itype == 'select'
                    select(name=argument.name)
                        each option in argument.options
                            option(value=option)= option
                else if argument.itype == 'ipv4'
                    input(type="text",name=argument.name,pattern="^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$")
                else
                    input(type=argument.itype,name=argument.name)
            button(type="submit") OK

